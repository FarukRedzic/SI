@using OnlineBanking.Web.Areas.ModulRadnik.ViewModels
@model LicniPodaciVM


<h2>Lični podaci</h2>
<hr>
@using (Html.BeginForm("EditRadnikProfil", "Radnik", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <!-- left column -->
        <div class="col-md-4">
            <div class="text-center">
                <img src="~/Content/img/@Url.Content(Model.SlikaPath)" class="avatar img-circle" style="width : 170px; height:170px;" alt="Image" />
                <br />
                <br />
                    <h5>Promijeni sliku</h5>
            </div>
            <div class="form-group">
                <div class="input-group col-lg-10 input-group-sm col-lg-offset-1">
                    <input id="ImagePath" type="file" class ="btn btn-sm btn-primary" name="file" />                    
                </div>
            </div>
        </div>


        @Html.HiddenFor(model => model.SlikaPath)
        @Html.HiddenFor(Model => Model.RadnikId)
        <!-- edit form column -->
        <div class="col-md-5 personal-info">
            <br />
            <br />
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Ime</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.Ime, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Prezime</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.Prezime, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Datum rođenja</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.DatumRodjenja, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Ulica</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.Ulica, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Broj ulice</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model =>Model.BrojUlice, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Opština</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.Opstina.Naziv, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Država</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.Opstina.Drzava.Naziv, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        @if (ViewData["e-mail"] != null)
                        {
                            <span style="color:red">e-mail je već zauzet!</span>
                        }                        
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Telefon</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(Model => Model.Telefon, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />

                <div class="form-group">
                    <label class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input type="submit" name="name" value="Spremi promjene" class="btn btn-primary btn-sm" />
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<hr>

