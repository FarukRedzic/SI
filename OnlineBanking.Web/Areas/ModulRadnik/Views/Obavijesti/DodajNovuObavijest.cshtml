@using OnlineBanking.Web.Areas.ModulRadnik.ViewModels

@{
//Layout = null;
}
@model DodajNovuObavijestVM
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Nova obavijest</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color :#7da0ff; color:#ffffff">
                Obavijest
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("SnimiObavijest", "Obavijesti"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(Model => Model.RadnikId)
                            <div class="form-group">

                                @if (ViewData["ObavijestPoslana"] == null)
                                {
                                    @Html.Label("Naslov: ")
                                    @Html.TextBoxFor(Model => Model.Naslov, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(Model => Model.Naslov, "",new {@class = "text-danger" })
                                }
                            </div>
                            <div class="form-group">

                                @if (ViewData["ObavijestPoslana"] != null)
                                {
                                    @Html.Label("Naslov: ")
                                    @Html.TextBoxFor(Model => Model.Naslov, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(Model => Model.Naslov, "", new { @class = "text-danger" })

                                }
                            </div>
                            <div class="form-group">

                                @if (ViewData["ObavijestPoslana"] == null)
                                {
                                    @Html.Label("Sadržaj: ")
                                    @Html.TextAreaFor(Model => Model.Sadrzaj, new { @class = "form-control", @cols = "80", @rows = "8", style = "resize:none" })
                                    @Html.ValidationMessageFor(Model => Model.Sadrzaj, "", new { @class = "text-danger" })
                                }
                            </div>
                            <div class="form-group">

                                @if (ViewData["ObavijestPoslana"] != null)
                                {
                                    @Html.Label("Sadržaj: ")
                                    @Html.TextAreaFor(Model => Model.Sadrzaj, new { @class = "form-control", @cols = "60", @rows = "8", style = "resize:none", @readonly = "readonly" })
                                }
                            </div>
                            @Html.HiddenFor(Model => Model.DatumVrijeme)

                            <div class="form-group">

                                @if (ViewData["ObavijestPoslana"] == null)
                                {
                                    <input type="submit" value="Postavi obavijest" class="btn btn-primary btn-sm" />
                                }

                            </div>
                            <div class="form-group">

                                @if (ViewData["ObavijestPoslana"] != null)
                                {
                                    <a href="/ModulRadnik/Obavijesti/PrikaziObavijesti" class="btn btn-primary btn-sm">Prikaži obavijesti</a> <a href="/ModulRadnik/Obavijesti/DodajNovuObavijest" class="btn btn-primary btn-sm">Postavi novu obavijest</a>
                                }
                            </div>
                            <div class="form-group">

                                @if (ViewData["ObavijestPoslana"] != null)
                                {
                                    <label class="alert alert-success"> @ViewData["ObavijestPoslana"] </label>
                                }

                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
