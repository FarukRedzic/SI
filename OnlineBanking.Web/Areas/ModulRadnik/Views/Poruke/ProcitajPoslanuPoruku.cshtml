@using OnlineBanking.Web.Areas.ModulRadnik.ViewModels
@{
//Layout = null;
}
@model OdgovorNaPorukuVM


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Poruka</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color :#7da0ff; color:#ffffff">
                Detalji poruke
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("ObrisiPoslanuPoruku", "Poruke"))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.Label("Pošiljaoc: ")
                                @Html.TextBoxFor(Model => Model.ImePrezime, new { @class = "form-control", style = "width:100%", @readonly = "readonly" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Naslov: ")
                                @Html.TextBoxFor(Model => Model.Naslov, new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Sadržaj: ")
                                @Html.TextAreaFor(Model => Model.Sadrzaj, new { @class = "form-control", @cols = "60", @rows = "8", style = "resize:none", @readonly = "readonly" })
                            </div>
                            @Html.HiddenFor(Model => Model.PorukaId)
                            <div class="col-md-12 col-md-offset-0">
                                <br />
                                @if (ViewData["PorukaObrisana"] == null)
                                {
                                <a href="/ModulRadnik/Poruke/PrikaziPoslanePoruke" class="btn btn-primary btn-sm">Poslane poruke</a> <input type="submit" value="Obriši" class="btn btn-danger btn-sm" /> 
                                }
                            </div>
                            <div class="col-md-12 col-md-offset-0">
                                <br />
                                @if (ViewData["PorukaObrisana"] != null)
                                {
                                    <a href="/ModulRadnik/Poruke/PrikaziPoslanePoruke" class="btn btn-primary btn-sm">Poslane poruke</a>
                                }
                            </div>
                            <div class="col-md-12 col-md-offset-0">
                                <br />
                                @if (ViewData["PorukaObrisana"] != null)
                                {
                                    <label class="alert alert-success"> @ViewData["PorukaObrisana"] </label>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
