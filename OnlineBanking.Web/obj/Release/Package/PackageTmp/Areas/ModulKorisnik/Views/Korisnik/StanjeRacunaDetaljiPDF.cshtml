@using OnlineBanking.Web.Areas.ModulKorisnik.ViewModels
@{
            Layout = null;
}
@model StanjeRacunaDetaljiVM

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Online banking</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/Content/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="~/Content/dist/css/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/Content/bower_components/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body> 
    <div>
    <div class="table-info">
        <div class="table-header">
            <div class="table-caption">
                <b> Klijent: @Model.ImePrezime</b>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Banka</th>
                    <th>Vlasnik računa</th>
                    <th>Vrsta računa</th>
                    <th>Broj računa</th>
                    <th>Datum otvaranja</th>
                    <th>Stanje računa</th>
                    <th>Limit</th>
                    <th>Valuta</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>FIT Banka</td>
                    <td>@Model.ImePrezime</td>
                    <td>@Model.TipRacunaEnum</td>
                    <td>@Model.BrojRacuna</td>
                    <td>@Model.DatumOtvaranja</td>
                    <td>@Model.Stanje</td>
                    <td>@Model.Limit</td>
                    <td>@Model.Valuta</td>

                </tr>
            </tbody>
        </table>
        <div class="table-footer">
            Detaljan prikaz računa
        </div>
    </div>

</div>
   
</body>
</html>
